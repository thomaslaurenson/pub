# CUSTOM ALIASES

# Common commands
alias ll="ls -lisa"
alias cls="clear"
alias ping="ping -c 4"
alias myip="curl http://ipecho.net/plain; echo"
alias update="sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y"
alias df="df -H"
alias reload="exec $BASH"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Git aliases
alias gs="git status"
alias gp="git push"
alias gb="git branch "
alias gc="git checkout "
alias gd="git diff "

# Dev
alias m="make"

# Python
alias python="python3"
alias py="python3"
alias py_http='python3 -m http.server 8080'
alias vcreate="python -m venv venv"
alias vactivate="source venv/bin/activate"
alias vremove="rm -rf ./venv"

# Docker
alias d="docker"
alias dprune="docker system prune -af; docker volume prune -f"

# Terraform
alias tf="terraform"
